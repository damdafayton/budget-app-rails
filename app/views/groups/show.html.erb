<p style="color: green"><%= notice %></p>

<section class='d-flex flex-column justify-content-between flex-grow-1'>
  <%= render @group %>

  <div class='mb-2'>
      <%= link_to "Edit this group", edit_group_path(@group), class:'btn btn-warning mb-2 text-white d-block' %>
      <span class='d-inline'>
        <%= button_to "Destroy this group", @group, method: :delete, class:'btn btn-danger mb-2' %>
      </span>
  </div>
</section>
